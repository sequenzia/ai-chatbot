# AI Chatbot Environment Configuration (Vite)
# Copy this file to .env.local and fill in your values
# Vite requires VITE_ prefix for client-side environment variables

# =============================================================================
# Mock Backend Configuration
# =============================================================================

# Use mock backend instead of real API (default: true)
VITE_USE_MOCK_CHAT=true

# Delay between characters when streaming (in milliseconds)
VITE_MOCK_STREAM_DELAY_MS=25

# =============================================================================
# Optional - AI Model Configuration
# =============================================================================

# Default model for chat conversations (for future real backend)
# Format: provider/model-name (e.g., openai/gpt-4o, anthropic/claude-sonnet-4)
VITE_AI_DEFAULT_MODEL=anthropic/claude-sonnet-4

# Maximum length for generated titles (in characters)
VITE_AI_TITLE_MAX_LENGTH=50

# Timeout for title generation requests (in milliseconds)
VITE_AI_TITLE_TIMEOUT_MS=10000

# =============================================================================
# Optional - Development / Debugging
# =============================================================================

# Enable debug logging
VITE_AI_DEBUG_ON=false

